require("unistd")
require("stdio")

def main(args):
    if len(args) < 2:
        print("usage: chown [OPTION]... [OWNER][:[GROUP]] FILE...")
        return 1

    # TODO: Implement properly, this is just a demo

    # TODO: Check if path exists
    result = chown(args[0], int(args[1]), int(args[1]))

    if result < 0:
        perror("failed to change owner")
        return 1

    return 0