require("unistd")
require("stdio")

def main(args):
    if len(args) != 2:
        print("usage: link <oldpath> <newpath>")
        return 1

    # TODO: Userland checks, but I'm lazy now so I'll let the kernel do it
    result = link(args[0], args[1])

    if result < 0:
        perror("link")

    return 0