require("unistd")
require("fcntl")

def main(args):
    if len(args) < 2:
        print(f"usage: write <path> <data>")
        return 1

    fd = open(args[0], O_WRONLY)

    if fd < 0:
        perror("open")
        return 1



    result = write(fd, " ".join(args[1:]))

    # TODO: Close fd

    # TODO: Support printing non-string types?
    print(f"Wrote {result} bytes")

    return 0