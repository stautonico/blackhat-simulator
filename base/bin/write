# Test for writing:
# write /bin/cat def main(args):\n\tprint("This is a hacked cat binary!")\n\treturn 0
# Expected: 64 bytes

def main(args):
    if len(args) < 2:
        print(f"usage: write <path> <data>")
        return 1

    result = _syscall(0x1, args[0], " ".join(args[1:]))

    # TODO: Support printing non-string types?
    print(f"Wrote {result} bytes")

    return 0